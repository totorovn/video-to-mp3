{
  "name": "video-to-mp3",
  "version": "1.0.0",
  "description": "Convert video files to high-quality MP3",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "author": "Audio Tools",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.2"
  },
  "build": {
    "appId": "com.audiotools.video-to-mp3",
    "productName": "Video to MP3",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "**/*",
      "node_modules/@ffmpeg-installer/**/*"
    ]
  }
}
